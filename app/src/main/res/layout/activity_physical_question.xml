<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/elem_backblur"
    tools:context=".PhysicalQuestion">

    <LinearLayout
        android:id="@+id/page_before_questions"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="visible"
        android:background="@drawable/transgr">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selfcheck"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorLight"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/resultgif"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/load"
        android:layout_margin="30dp"
        android:visibility="gone"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/physical_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selfcheck_description"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#000"
                android:textStyle="italic"
                />

        </ScrollView>

        <Button
            android:id="@+id/move_questions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text = "Move to Questions"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="visible"
            android:background="@drawable/transfront"
            />

        <Button
            android:id="@+id/come_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text = "Go Back"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            android:background="@drawable/transfront"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/transfront"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selfcheck"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/physical_questions_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selfcheck"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            />

        <RadioGroup
            android:id="@+id/answer_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            >

            <RadioButton
                android:id="@+id/answer_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:onClick="markedAnswer"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/answer_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sometimes"
                android:onClick="markedAnswer"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:buttonTint="@color/colorPrimaryDark"/>

            <RadioButton
                android:id="@+id/answer_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Often"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:onClick="markedAnswer"
                android:buttonTint="@color/colorPrimaryDark"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/question_reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/reset"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".30"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/question_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/next"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".30"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>