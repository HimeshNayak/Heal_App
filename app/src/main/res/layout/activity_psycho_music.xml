<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/elem_backblur"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PsychoMusic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/transfront"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation Point"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruct_medi"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#222"
            />

        <ImageView
            android:id="@+id/song_oneBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/sunrise"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/song_twoBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/mountain"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/song_threeBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/river"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/psycho_music_stop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_stop_black_24dp"
                android:layout_weight=".50"
                android:background="@color/darkbluishblack"
                />

            <ImageView
                android:id="@+id/psycho_music_play_pause"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_play"
                android:layout_weight=".50"
                android:background="@color/darkbluishblack"
                />

            <ImageView
                android:id="@+id/psycho_music_next"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:background="@color/darkbluishblack"
                android:layout_weight=".50"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>