<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/transfront"
        android:padding="20dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="3dp">

        <TextView
            android:id="@+id/home_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#111"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/home_sub_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/name_fullform"
                    android:textColor="#111"
                    android:textSize="22sp"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backtextelemnew"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/physical_index"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight=".50"
                        android:text="@string/physical_heading"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <!--                        android:background="@drawable/transgr"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/psycho_index"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight=".30"
                            android:text="Mental\nState"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <!--                        android:background="@drawable/transe"-->


                        <TextView
                            android:id="@+id/sleep_index"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight=".30"
                            android:text="Sleep\nCycle"
                            android:textAlignment="textEnd"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <!--                            android:background="@drawable/transa"-->


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nutrition_index"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight=".30"
                            android:layout_marginTop="20dp"
                            android:text="@string/nutrition_heading"
                            android:textAlignment="textStart"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <!--                            android:background="@drawable/transr"-->


                        <TextView
                            android:id="@+id/hygiene_index"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight=".30"
                            android:text="@string/hygiene_heading"
                            android:textAlignment="textEnd"
                            android:textColor="#000"

                            android:textSize="20sp" />
                        <!--                            android:background="@drawable/transw"-->


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    />

                <com.tomer.fadingtextview.FadingTextView
                    android:id="@+id/homequotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:textColor="#000"
                    app:texts="@array/quotes_home"
                    app:timeout="5000"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    />

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_margin="20dp"-->
<!--                    android:textSize="25sp"-->
<!--                    android:textStyle="italic"-->
<!--                    android:textColor="#000"-->
<!--                    android:text="@string/about_heal"-->
<!--                    />-->


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>